<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.AnnounceDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/announce_dialog_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_error_outline_black"/>

        <TextView
            android:id="@+id/announce_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:fontFamily="@font/supermarket"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/announce_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialog's message here"
            android:fontFamily="@font/supermarket"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/announce_dialog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/supermarket"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_positive"
            android:layout_marginTop="10dp"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</RelativeLayout>